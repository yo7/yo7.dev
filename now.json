{
  "version": 2,
  "name": "yo7.dev",
  "regions": ["hnd"],
  "builds": [
    {
      "src": "./build.sh",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "public,max-age=31536000,immutable"
      }
    },
    {
      "src": "/(.*\\.(js|css|png)$)",
      "dest": "/$1",
      "headers": {
        "cache-control": "public,max-age=31536000,immutable"
      }
    },
    {
      "src": "^/(.*)",
      "dest": "/$1",
      "headers": {
        "cache-control": "public,max-age=0,must-revalidate"
      }
    }
  ]
}
